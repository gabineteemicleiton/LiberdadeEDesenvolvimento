modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Servidor Principal"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Transparency API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Website Server"

[[workflows.workflow]]
name = "Simple API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-proxy.js"
waitForPort = 3003

[[workflows.workflow]]
name = "Servidor Principal"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 3000

[[workflows.workflow]]
name = "Transparency API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node transparency-api.js"
waitForPort = 3004

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/index.ts"
waitForPort = 5001

[[workflows.workflow]]
name = "Website Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python -m http.server 5000 --bind 0.0.0.0 --directory ."
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3002

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3003

[[ports]]
localPort = 3003
externalPort = 4200

[[ports]]
localPort = 3004
externalPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
